<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ScrollView
            android:id="@+id/scorllview"
            android:paddingLeft="0.0dip"
            android:paddingRight="0.0dip"
            android:scrollbars="none"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/ly_top"
                android:layout_width="fill_parent"
                android:layout_height="360.0dip">
                <FrameLayout
                    android:id="@+id/flUserIcon"
                    android:paddingTop="@dimen/login_icon_padding_top"
                    android:paddingBottom="22.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">
                    <com.makeramen.roundedimageview.RoundedImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/ivUserPic"
                        android:background="@drawable/login_picture_background"
                        android:saveEnabled="true"
                        android:layout_width="84.0dip"
                        android:layout_height="84.0dip"
                        android:layout_marginBottom="4.0dip"
                        android:src="@drawable/login_picture"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="false"
                        app:riv_corner_radius="42.0dip"
                        app:riv_border_width="1.0px"
                        app:riv_border_color="#0d000000" />
                </FrameLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/input_layout"
                    android:background="@drawable/login_background"
                    android:layout_width="fill_parent"
                    android:layout_height="96.0dip"
                    android:layout_below="@id/flUserIcon"
                    android:layout_centerHorizontal="true">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/focus"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_width="0.0dip"
                        android:layout_height="0.0dip" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/input_layout_username"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false">
                        <LinearLayout
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0">
                            <TextView android:textSize="15.0sp"
                                android:textColor="@color/login_name"
                                android:id="@+id/tvUsrname"
                                android:background="@drawable/login_user"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18.0dip" />
                            <AutoCompleteTextView
                                android:textSize="15.0sp"
                                android:textColor="@color/main_content_text_color"
                                android:textColorHint="@color/empty_view_text_color"
                                android:id="@+id/etLoginUsername"
                                android:background="@color/login_input_bg_color"
                                android:layout_width="fill_parent"
                                android:layout_height="48.0dip"
                                android:layout_marginLeft="28.0dip"
                                android:hint="@string/login_account_name_tips"
                                android:singleLine="true"
                                android:maxLength="64"
                                android:popupBackground="@drawable/login_background_more"
                                android:inputType="textEmailAddress"
                                android:imeOptions="actionNext" />
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:id="@+id/login_user_clear_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="12.0dip">
                            <ImageView
                                android:id="@+id/login_user_tips_btn"
                                android:padding="8.0dip"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/login_clear_btn" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false">
                        <LinearLayout
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0">
                            <TextView
                                android:textSize="15.0sp"
                                android:textColor="@color/login_name"
                                android:id="@+id/tvPwd"
                                android:background="@drawable/login_key"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18.0dip" />
                            <EditText
                                android:textSize="15.0sp"
                                android:textColor="@color/main_content_text_color"
                                android:textColorHint="@color/empty_view_text_color"
                                android:id="@+id/etPwd"
                                android:background="@color/login_input_bg_color"
                                android:layout_width="fill_parent"
                                android:layout_height="48.0dip"
                                android:layout_marginLeft="28.0dip"
                                android:hint="@string/login_account_pwd_tips"
                                android:singleLine="true"
                                android:maxLength="64"
                                android:inputType="textPassword"
                                android:imeOptions="actionNext" />
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:id="@+id/login_password_clear_btn"
                            android:paddingRight="12.0dip"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent">
                            <ImageView
                                android:id="@+id/login_password_tips_btn"
                                android:padding="8.0dip"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/login_clear_btn" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:textSize="17.0sp"
                    android:textColor="@color/main_button_disabled_text_color_for_light_color_button"
                    android:id="@+id/bnLogin"
                    android:background="@drawable/login_button_big_orange_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/login_button"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="22.0dip"
                    android:layout_marginRight="10.0dip"
                    android:text="@string/login_btn"
                    android:layout_below="@id/input_layout"
                    android:layout_centerHorizontal="true" />
                <TextView
                    android:textSize="14.0sp"
                    android:textColor="@color/main_link_text_color"
                    android:id="@+id/login_blocking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:layout_marginRight="10.0dip"
                    android:text="@string/login_blocking"
                    android:layout_below="@id/bnLogin"
                    android:layout_alignParentRight="true" />
                <!--<ViewStub-->
                    <!--android:id="@+id/vsLoginHorizontal"-->
                    <!--android:layout="@layout/vw_switchuser_bottom"-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginLeft="29.0dip"-->
                    <!--android:layout_marginRight="29.0dip"-->
                    <!--android:layout_alignParentBottom="true" />-->
            </RelativeLayout>
        </ScrollView>
        <!--<ViewStub-->
            <!--android:id="@+id/vsLogin"-->
            <!--android:layout="@layout/vw_switchuser_bottom"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="29.0dip"-->
            <!--android:layout_marginRight="29.0dip"-->
            <!--android:layout_marginBottom="17.0dip"-->
            <!--android:layout_alignParentBottom="true" />-->
    </RelativeLayout>

</FrameLayout>